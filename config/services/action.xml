<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <defaults public="true" autoconfigure="false" autowire="false" />

        <service id="eightlines.sylius_simpay_plugin.action.capture" class="EightLines\SyliusSimPayPlugin\Action\CaptureAction">
            <argument type="service" id="eightlines.sylius_simpay_plugin.bridge.simpay_directbilling_bridge" />
            <tag name="payum.action" factory="simpay" alias="payum.action.capture" />
        </service>

        <service id="eightlines.sylius_simpay_plugin.action.notify" class="EightLines\SyliusSimPayPlugin\Action\NotifyAction">
            <argument type="service" id="eightlines.sylius_simpay_plugin.bridge.simpay_directbilling_bridge" />
            <tag name="payum.action" factory="simpay" alias="payum.action.notify" />
        </service>

        <service id="eightlines.sylius_simpay_plugin.action.status" class="EightLines\SyliusSimPayPlugin\Action\StatusAction">
            <argument type="service" id="eightlines.sylius_simpay_plugin.bridge.simpay_directbilling_bridge" />
            <tag name="payum.action" factory="simpay" alias="payum.action.status "/>
        </service>

        <service id="eightlines.sylius_simpay_plugin.action.convert_payment" class="EightLines\SyliusSimPayPlugin\Action\ConvertPaymentAction">
            <tag name="payum.action" factory="simpay" alias="payum.action.convert_payment" />
        </service>
    </services>
</container>
